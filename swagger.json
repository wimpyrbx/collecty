  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Products",
      "description": "Product management endpoints"
    },
    {
      "name": "Product Groups",
      "description": "Product group management endpoints"
    },
    {
      "name": "Product Types",
      "description": "Product type management endpoints"
    },
    {
      "name": "Regions",
      "description": "Region management endpoints"
    },
    {
      "name": "Ratings",
      "description": "Rating management endpoints"
